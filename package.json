{
  "name": "tailwindcss-react-ghpages-starter",
  "version": "0.1.0",
  "description": "Barebones starter for a Tailwind CSS/React-based PWA hosted on GitHub Pages. Uses GitHub Actions to build and deploy site.",
  "private": true,
  "engines": {
    "node": ">= 16.x",
    "npm": ">= 8.x"
  },
  "type": "module",
  "scripts": {
    "build": "vite build",
    "clean": "rm -rf ./build",
    "dev": "vite serve",
    "preview": "vite preview",
    "start": "npm run dev",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "url": "https://github.com/mikesprague/tailwindcss-react-ghpages-starter"
  },
  "keywords": [],
  "author": {
    "name": "Michael Sprague",
    "email": "mikesprague@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mikesprague/tailwindcss-react-ghpages-starter/issues"
  },
  "homepage": "https://mikesprague.github.io/tailwindcss-react-ghpages-starter",
  "dependencies": {
    "axios": "1.3.6",
    "cross-env": "7.0.3",
    "dayjs": "1.11.7",
    "dotenv": "16.0.3",
    "he": "1.2.0",
    "nanoid": "4.0.2",
    "prop-types": "15.8.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "4.8.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.21.3",
    "@babel/eslint-plugin": "7.19.1",
    "@babel/preset-env": "7.21.4",
    "@babel/preset-react": "7.18.6",
    "@fullhuman/postcss-purgecss": "5.0.0",
    "@tailwindcss/typography": "0.5.9",
    "@vitejs/plugin-react-swc": "3.3.0",
    "autoprefixer": "10.4.14",
    "babel-plugin-add-react-displayname": "0.0.5",
    "cssnano": "6.0.0",
    "cz-git": "^1.6.1",
    "eslint": "8.39.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.8.0",
    "eslint-config-stylelint": "18.0.0",
    "eslint-plugin-compat": "4.1.4",
    "eslint-plugin-html": "7.1.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-markdown": "3.0.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-security": "1.7.1",
    "postcss": "8.4.23",
    "postcss-cli": "10.1.0",
    "prettier": "2.8.8",
    "prettier-eslint": "15.0.1",
    "sass": "1.62.1",
    "stylelint": "14.16.1",
    "stylelint-config-prettier": "9.0.5",
    "stylelint-config-prettier-scss": "0.0.1",
    "stylelint-config-standard": "29.0.0",
    "stylelint-config-standard-scss": "6.1.0",
    "stylelint-prettier": "3.0.0",
    "tailwindcss": "3.3.2",
    "vite": "4.3.2",
    "vite-plugin-html": "3.2.0",
    "vite-plugin-pwa": "0.14.7"
  },
  "babel": {
    "plugins": [
      "add-react-displayname"
    ],
    "presets": [
      "@babel/preset-env",
      "@babel/react"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "settings": {
      "jest": {
        "version": 28
      }
    },
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "airbnb",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:jsx-a11y/recommended",
      "prettier",
      "stylelint"
    ],
    "plugins": [
      "compat",
      "html",
      "import",
      "jsx-a11y",
      "markdown",
      "prettier",
      "react",
      "react-hooks",
      "security"
    ],
    "parserOptions": {
      "ecmaVersion": 11,
      "allowImportExportEverywhere": true,
      "parser": "babel-parser",
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
    "rules": {
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "tabwidth": true,
    "trailingComma": "all"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  }
}
