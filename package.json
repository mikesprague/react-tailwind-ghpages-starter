{
  "name": "react-tailwind-ghpages-starter",
  "version": "1.0.0",
  "description": "Barebones starter for a React/Tailwind CSS PWA hosted via GitHub Pages. Uses GitHub Actions to build and deploy site.",
  "private": true,
  "engines": {
    "node": ">= 20.x",
    "npm": ">= 10.x"
  },
  "type": "module",
  "scripts": {
    "build": "npx vite build",
    "clean": "rm -rf ./build",
    "dev": "npx vite serve",
    "preview": "npx vite preview",
    "start": "npm run dev",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "url": "https://github.com/mikesprague/react-tailwind-ghpages-starter"
  },
  "keywords": [],
  "author": {
    "name": "Michael Sprague",
    "email": "mikesprague@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mikesprague/react-tailwind-ghpages-starter/issues"
  },
  "homepage": "https://mikesprague.github.io/react-tailwind-ghpages-starter",
  "dependencies": {
    "daisyui": "5.0.6",
    "dayjs": "1.11.13",
    "dotenv": "16.4.7",
    "he": "1.2.0",
    "jotai": "2.12.2",
    "nanoid": "5.1.5",
    "prop-types": "15.8.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-icons": "5.5.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tailwindcss/typography": "0.5.16",
    "@tailwindcss/vite": "4.0.14",
    "@vitejs/plugin-react-swc": "3.8.1",
    "cssnano": "7.0.6",
    "cz-git": "1.11.1",
    "stylelint": "16.16.0",
    "stylelint-config-standard": "37.0.0",
    "tailwindcss": "4.0.14",
    "vite": "6.2.2",
    "vite-plugin-html": "3.2.2",
    "vite-plugin-pwa": "0.21.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "volta": {
    "node": "22.2.0",
    "npm": "10.8.0"
  }
}
