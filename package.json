    "sass": "1.69.6",
    "stylelint": "16.1.0",
    "stylelint-config-standard": "36.0.0",
    "stylelint-config-standard-scss": "12.0.0",
    "tailwindcss": "3.4.0",
    "vite": "5.0.10",
    "vite-plugin-html": "3.2.1",
    "vite-plugin-pwa": "0.17.4"
